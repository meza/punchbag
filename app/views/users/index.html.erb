<h1>Listing users</h1>

<table>
	<thead>
	<tr>
		<th>Username</th>
		<th>Email</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	</thead>

	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td><%= link_to 'Show', user %></td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<% unless current_user? user %>
				<% if @currentuser.is_follower_of(user) %>
					<td><%= link_to 'Unfollow', controller: "users", action: "unfollow", username: user.username %></td>
				<% else %>
					<td><%= link_to 'Follow', controller: "users", action: "follow", username: user.username %></td>
				<% end %>
			<% end %>
		</tr>
	<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<% unless @currentuser.followers.empty? %>
	|
	<%= link_to 'Compose', message_compose_path_path %>
<% end %>
